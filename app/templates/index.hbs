<div class="menu">
  {{#if session.isAuthenticated}}
    <a {{action 'logout'}}>
      <button class="ui google plus button">
        <i class="google plus icon"></i>
        Logout
      </button>
    </a>
    {{show-users  users=model.users}}
    {{delete-user action='deleteUser'}}
    {{update-user action='updateUser'}}
    {{map/leaflet-map cities=model.cities}}
    {{map/input-form searchPos="searchPos" }}
  {{else}}
    {{#link-to 'login'}}
      <button class="ui instagram button">
        <i class="instagram icon"></i>
        Login
      </button>
    {{/link-to}}
    {{#link-to 'register'}}
      <button class="ui instagram button">
        <i class="instagram icon"></i>
        Register
      </button>
    {{/link-to}}
  {{/if}}

</div>
<div class="main">
  {{outlet}}
</div>

